<div class="text-block">
  <{{ section.settings.text_tag }} class="{{ section.settings.text_class }}">
    {{ section.settings.text_content }}
  </{{ section.settings.text_tag }}>
</div>

<style>
  .text-block {
    text-align: center;
    padding: 40px 20px;
  }

  .text-block h1,
  .text-block h2,
  .text-block h3,
  .text-block p,
  .text-block span,
  .text-block div {
    margin: 0 auto;
    max-width: 800px;
  }
</style>

{% schema %}
{
  "name": "Text Block",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "text_content",
      "label": "Text Content",
      "default": "Welcome to our store!"
    },
    {
      "type": "select",
      "id": "text_tag",
      "label": "Text Type (HTML tag)",
      "default": "h2",
      "options": [
        { "value": "h1", "label": "Heading 1 (h1)" },
        { "value": "h2", "label": "Heading 2 (h2)" },
        { "value": "h3", "label": "Heading 3 (h3)" },
        { "value": "p", "label": "Paragraph (p)" },
        { "value": "span", "label": "Span" },
        { "value": "div", "label": "Div" }
      ]
    },
    {
      "type": "text",
      "id": "text_class",
      "label": "CSS Class (optional)"
      //   "default": ""
    }
  ],
  "presets": [
    {
      "name": "Simple Text Block",
      "category": "Custom"
    }
  ]
}
{% endschema %}
