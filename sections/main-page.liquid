<style>
  .page-container {
    max-width: 800px;
    margin: 40px auto;
    padding: 0 20px;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  }

  .page-title {
    font-size: 2.2rem;
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center;
  }

  .page-content {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #333;
  }
</style>

<div class="page-container">
  <h1 class="page-title">{{ page.title }}</h1>
  <div class="page-content">
    {{ page.content }}
  </div>
</div>

